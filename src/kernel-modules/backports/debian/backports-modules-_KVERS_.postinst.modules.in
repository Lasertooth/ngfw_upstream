#! /bin/sh

set -e

exec >> /var/log/uvm/kernel-modules.log 2>&1

KVERS=$(echo $DPKG_MAINTSCRIPT_PACKAGE | perl -pe 's/.+-3.2/3.2/')

date -Iseconds

while read mod ; do
  find /lib/modules/$KVERS -name $mod -a ! -path "*extra*" -exec rm -f "{}" \;
done < /usr/share/doc/$DPKG_MAINTSCRIPT_PACKAGE/list

depmod -a
#DEBHELPER#

exit 0
